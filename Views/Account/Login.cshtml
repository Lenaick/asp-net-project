@using Projet3.Models
@model LoginLecteurViewModel
@{
    ViewBag.Title = "Je me connecte";
    ViewBag.ReturnUrl = !string.IsNullOrEmpty(ViewBag.ReturnUrl) ? ViewBag.ReturnUrl : null;
}

<div class="row">
    <div class="col-sm-6">
        @{ Html.RenderPartial("Create", new CreateLecteurViewModel()); }
    </div>
    <div class="col-sm-6">
        <h2>@ViewBag.Title</h2>
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.Partial("ValidationSummary", ViewData.ModelState);
                <div class="form-group">
                    @Html.LabelFor(m => m.Username)
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Se connecter" class="btn btn-primary" />
                </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}