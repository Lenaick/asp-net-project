        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.titre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.contenu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date_publication)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.addedum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date_addedum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.publie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.image)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categorie.libelle)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.idArticle }) |
            @Html.ActionLink("Details", "Details", new { id = item.idArticle }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.idArticle })
        </td>
    </tr>
}

</table>
