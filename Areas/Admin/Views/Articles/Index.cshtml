        <th>
            @Html.DisplayNameFor(model => model.contenu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date_publication)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.addedum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date_addedum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.publie)
        </th>
